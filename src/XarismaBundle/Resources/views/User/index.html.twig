{% extends 'XarismaBundle:Default:base.html.twig' %}

{% block body -%}
    <h1>User List</h1>

    <table class="records_list table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Firstname</th>
                <th>Lastname</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# Display Import and Export links only if user is admin#}
    {% if app.user and is_granted('ROLE_ADMIN') %}
    <ul>
        <li>
            <a href="{{ path('admin_user_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endif %}
    
    {% endblock body %}
