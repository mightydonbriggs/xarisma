{% extends 'XarismaBundle:Default:base.html.twig' %}

{% block body -%}
    <h1>Work Station List</h1>

    <table class="records_list table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Description</th>
{#                <th>Actions</th>#}
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_station_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.stationcode }}</td>
                <td>{{ entity.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# Display Import and Export links only if user is admin#}
    {% if app.user and is_granted('ROLE_ADMIN') %}        
    <ul>
        <li>
            <a href="{{ path('admin_station_new') }}">Create a new entry</a>
        </li>
    </ul>
    {% endif %}
    
    {% endblock body %}
