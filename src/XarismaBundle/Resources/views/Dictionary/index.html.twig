{% extends 'XarismaBundle:Default:base.html.twig' %}

{% block body -%}
    <h1>Dictionary List</h1>

    <table class="records_list table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Class</th>
                <th>Term</th>
                <th>Definition</th>
{#                <th>Actions</th>#}
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_dictionary_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.class }}</td>
                <td>{{ entity.term }}</td>
                <td>{{ entity.definition }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# Display Import and Export links only if user is admin#}
    {% if app.user and is_granted('ROLE_ADMIN') %}        
    <ul>
        <li>
            <a href="{{ path('admin_dictionary_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endif %}
    
    {% endblock body %}
